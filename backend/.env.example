# Backend Environment Variables

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
DB_NAME=glinax

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production

# AI/RAG Service URL
AI_SERVICE_URL=http://127.0.0.1:8000/respond

# Groq API for LLM Title Generation (FREE - Get key from https://console.groq.com)
# Optional: System falls back to rule-based title generation if not set
GROQ_API_KEY=your_groq_api_key_here

# Email Configuration (for verification emails)
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password_or_app_password

# Paystack API (for payment processing)
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting (requests per minute)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits (in bytes)
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=5
